<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://sabnzbdstatus/content/configuration.css" type="text/css"?>
<!DOCTYPE overlay SYSTEM "chrome://sabnzbdstatus/locale/configuration.dtd">
<prefwindow id='sabnzb-prefs' title='&sabstatus.window_config.title;' buttons='accept,cancel' type='prefwindow'
 xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" onload='prefonload()'>

<prefpane id='sabnzb-gen' label='&sabstatus.gen_prefpane.label;' image='chrome://sabnzbdstatus/skin/config.png'>
	<preferences>
		<preference id='refreshrate' name='extensions.sabnzbdstatus.refreshRate' type='int' />
		<preference id='alwaysshow' name='extensions.sabnzbdstatus.alwaysShowIcon' type='bool' />
		<preference id='onlyshow' name='extensions.sabnzbdstatus.onlyShowIcon' type='bool' />
		<preference id='leftclick' name='extensions.sabnzbdstatus.leftClick' type='string' />
		<preference id='middleclick' name='extensions.sabnzbdstatus.middleClick' type='string' />
	</preferences>

<groupbox>
	<caption label='&sabstatus.gen_caption.label;' />
	<hbox align='center'>
		<label control='refreshrate' value='&sabstatus.pref_refreshrate.value;' />
		<textbox preference='refreshrate' id='refreshrate' flex='1' />
		<label value='&sabstatus.pref_refreshrate_units.value;' />
	</hbox>
</groupbox>
<groupbox>
	<caption label='&sabstatus.sbar_caption.label;' />
	<hbox align='center'>
		<checkbox label='&sabstatus.pref_alwaysshow.value;' preference='alwaysshow' id='alwaysshow' />
	</hbox>
	<hbox align='center'>
		<checkbox label='&sabstatus.pref_onlyshow.value;' preference='onlyshow' id='onlyshow' />
	</hbox>
	<hbox align='center'>
		<label control='leftclick' value='&sabstatus.pref_leftclick.label;' />
		<menulist preference='leftclick' id='leftclick' flex='1'>
			<menupopup>
				<menuitem label='&sabstatus.pref_sbarclick_refresh.value;' value='refresh' />
				<menuitem label='&sabstatus.pref_sbarclick_newtab.value;' value='newtab' />
				<menuitem label='&sabstatus.pref_sbarclick_sametab.value;' value='sametab' />
				<menuitem label='&sabstatus.pref_sbarclick_newwindow.value;' value='newwindow' />
			</menupopup>
		</menulist>
	</hbox>
	<hbox align='center'>
		<label control='middleclick' value='&sabstatus.pref_middleclick.label;' />
		<menulist preference='middleclick' id='middleclick' flex='1'>
			<menupopup>
				<menuitem label='&sabstatus.pref_sbarclick_refresh.value;' value='refresh' />
				<menuitem label='&sabstatus.pref_sbarclick_newtab.value;' value='newtab' />
				<menuitem label='&sabstatus.pref_sbarclick_sametab.value;' value='sametab' />
				<menuitem label='&sabstatus.pref_sbarclick_newwindow.value;' value='newwindow' />
			</menupopup>
		</menulist>
	</hbox>
</groupbox>
</prefpane>

<prefpane id='nzbd-servers' label='Servers' image='chrome://sabnzbdstatus/skin/server.png'>
	<preferences>
		<preference id='nzburl1' name='extensions.nzbdstatus.servers.1.url' type='string' />
		<preference id='nzblabel1' name='extensions.nzbdstatus.servers.1.label' type='string' />
		<preference id='nzbtype1' name='extensions.nzbdstatus.servers.1.type' type='string' />
		<preference id='nzbcolor1' name='extensions.nzbdstatus.servers.1.color' type='string' />
	</preferences>

<hbox>
	<button label='Add Server' icon='add' oncommand='addServer();' />
	<button label='Test All Servers' icon='network' />
</hbox>
<groupbox id='server1'>
	<caption label='Server 1' />
	<grid>
		<columns>
			<column flex='1' />
			<column />
		</columns>
		<rows>
			<row>
				<grid>
					<columns>
						<column />
						<column flex='1' />
					</columns>
					<rows>
						<row>
							<hbox align='center'>
								<label value='URL' />
							</hbox>
							<textbox flex='1' preference='nzburl1' />
						</row>
						<row>
							<hbox align='center'>
								<label value='Name' />
							</hbox>
							<textbox flex='1' preference='nzblabel1' />
						</row>
					</rows>
				</grid>
				<vbox>
					<button disabled='true' label='Move Up' />
					<button label='Move Down' />
				</vbox>
			</row>
			<row>
				<hbox align='center'>
					<label value='Server' />
					<menulist preference='nzbtype1'>
						<menupopup>
							<menuitem label='SABnzbd+' value='sabnzbd+' />
							<menuitem label='HellaNZB' value='hellanzb' />
						</menupopup>
					</menulist>
					<label value='Color' />
					<menulist preference='nzbcolor1'>
						<menupopup>
							<menuitem label='Yellow' value='yellow' image='chrome://sabnzbdstatus/skin/download.png'>
								<image src='chrome://sabnzbdstatus/skin/download.png' />
								<label value='Yellow' />
							</menuitem>
							<menuitem label='Red' value='red' image='chrome://sabnzbdstatus/skin/download.png'>
								<image src='chrome://sabnzbdstatus/skin/download.png' />
								<label value='Red' />
							</menuitem>
						</menupopup>
					</menulist>
				</hbox>
				<button label='Delete' icon='remove' />
			</row>
		</rows>
	</grid>
</groupbox>

</prefpane>


<prefpane id='sabnzb-newzbin' label='Newzbin' image='chrome://sabnzbdstatus/skin/newzbin.png'>
	<preferences>
		<preference id='enableinnewzbin' name='extensions.sabnzbdstatus.enableInNewzbin' type='bool' />
		<preference id='newzbintosab' name='extensions.sabnzbdstatus.newzbinToSAB' type='int' />
	</preferences>

<groupbox>
	<caption label='&sabstatus.newzbin_caption.label;' />
	<hbox align='center'>
		<checkbox label='&sabstatus.pref_enableinnewzbin.value;' preference='enableinnewzbin' id='enableinnewzbin' />
	</hbox>
	<hbox align='center'>
		<label control='newzbintosab' value='&sabstatus.pref_newzbintosab.label;' />
		<menulist preference='newzbintosab' id='newzbintosab' flex='1'>
			<menupopup>
				<menuitem label='&sabstatus.pref_sabproclevel.value6;' value='6' />
				<menuitem label='&sabstatus.pref_sabproclevel.value5;' value='5' />
				<menuitem label='&sabstatus.pref_sabproclevel.value4;' value='4' />
				<menuitem label='&sabstatus.pref_sabproclevel.value3;' value='3' />
				<menuitem label='&sabstatus.pref_sabproclevel.value2;' value='2' />
				<menuitem label='&sabstatus.pref_sabproclevel.value1;' value='1' />
				<menuitem label='&sabstatus.pref_sabproclevel.value0;' value='0' />
			</menupopup>
		</menulist>
	</hbox>
</groupbox>

</prefpane>

<script type="application/x-javascript" src="chrome://sabnzbdstatus/content/configuration.js" />

</prefwindow>